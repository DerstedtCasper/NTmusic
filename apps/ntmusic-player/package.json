{
  "name": "ntmusic-desktop",
  "version": "0.1.0",
  "description": "NTmusic Desktop (prototype)",
  "author": "NTmusic",
  "main": "src/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev:renderer": "vite --config vite.config.ts",
    "build:renderer": "vite build --config vite.config.ts",
    "preview:renderer": "vite preview --config vite.config.ts"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "fs-extra": "^11.3.2",
    "music-metadata": "^11.4.0",
    "node-fetch": "^3.3.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "build": {
    "appId": "com.derstedt.ntmusic",
    "productName": "NTmusic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "renderer-dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../packages/audio-core/ntmusic_core/target/release/ntmusic_core.node",
        "to": "native/ntmusic_core.node"
      }
    ],
    "extraFiles": [
      {
        "from": "../../packages/audio-core/bin",
        "to": "engine"
      },
      {
        "from": "../../packages/audio-core/ntmusic_engine/target/release/ntmusic_engine.exe",
        "to": "engine/ntmusic_engine.exe"
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
