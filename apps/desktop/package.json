{
  "name": "ntmusic-desktop",
  "version": "0.1.0",
  "description": "NTmusic Desktop (prototype)",
  "author": "NTmusic",
  "main": "src/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "fs-extra": "^11.3.2",
    "music-metadata": "^11.4.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.derstedt.ntmusic",
    "productName": "NTmusic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../../engine/rust/ntmusic_core/target/release/ntmusic_core.node",
        "to": "native/ntmusic_core.node"
      }
    ],
    "extraFiles": [
      {
        "from": "../../engine/bin",
        "to": "engine"
      },
      {
        "from": "../../engine/rust/vmusic_engine/target/release/vmusic_engine.exe",
        "to": "engine/vmusic_engine.exe"
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
